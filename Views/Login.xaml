<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SemesterSync.Views.Login"
             xmlns:controls="clr-namespace:SemesterSync.Resources.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:SemesterSync.ViewModel"
             xmlns:model="clr-namespace:SemesterSync.Database"
             x:DataType="viewmodel:LoginViewModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing"
                                        Command="{Binding LoadCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="2*, *, 2*">
        <VerticalStackLayout Grid.Row="1">
            <Border
                Background="{StaticResource ControlBackground}"
                Stroke="White"
                StrokeShape="Ellipses"
                WidthRequest="100"
                HeightRequest="100">
                <Button ImageSource="{Binding LoginImage}"
                        BackgroundColor="{StaticResource ControlColor}"
                        Command="{Binding LoginCommand}"
                        VerticalOptions="CenterAndExpand" />
            </Border>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>