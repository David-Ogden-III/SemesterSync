<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="C971_Ogden.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:local="clr-namespace:C971_Ogden.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="C971_Ogden">

    <Shell.Behaviors>
        <tk:StatusBarBehavior StatusBarColor="{StaticResource ControlColor}" />
    </Shell.Behaviors>

    <TabBar>
        <ShellContent
            Title="Active Term"
            ContentTemplate="{DataTemplate local:ActiveTerm}"
            Route="MainPage" />
        <ShellContent
            Title="Terms"
            ContentTemplate="{DataTemplate local:AllTerms}"
            Route="AllTerms" />
        <ShellContent
            Title="Classes"
            ContentTemplate="{DataTemplate local:AllClasses}"
            Route="AllClasses" />
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:Profile}"
            Route="Profile" />
    </TabBar>
    

</Shell>
